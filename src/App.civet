import {createSignal} from 'solid-js'
{Game} from './Game.civet'

export function App
  [n, setN] := createSignal 3

  <header>
    <i>n</i><sup>2</sup>&thinsp;&minus;&thinsp;1 Sliding Squares Puzzle, <i>n</i> ={' '}
    <input #n type="number" min="2" value="3"
     onChange={(e) => setN e.currentTarget.valueAsNumber}>
  <main>
    <Game {n()}/>
  <footer>
    <a href="https://github.com/edemaine/sliding-squares-puzzle">Source code on GitHub</a>
